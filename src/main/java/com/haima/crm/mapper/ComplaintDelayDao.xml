<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.haima.crm.dao.ComplaintDelayDao">

	<select id="queryObject" resultType="com.haima.crm.entity.ComplaintDelayEntity">
		select * from t_complaint_delay where id = #{value}
	</select>

	<select id="queryList" resultType="com.haima.crm.entity.ComplaintDelayEntity">
		select * from t_complaint_delay 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_complaint_delay 
	</select>
	 
	<insert id="save" parameterType="com.haima.crm.entity.ComplaintDelayEntity">
		insert into t_complaint_delay
		(
			`id`, 
			`complain_id`, 
			`complain_code`, 
			`porpos_date`, 
			`delay_reason`, 
			`estimate_finish_time`, 
			`checker`, 
			`check_info`, 
			`check_date`, 
			`del_flag`, 
			`create_by`, 
			`create_time`, 
			`update_by`, 
			`update_time`
		)
		values
		(
			#{id}, 
			#{complainId}, 
			#{complainCode}, 
			#{porposDate}, 
			#{delayReason}, 
			#{estimateFinishTime}, 
			#{checker}, 
			#{checkInfo}, 
			#{checkDate}, 
			#{delFlag}, 
			#{createBy}, 
			#{createTime}, 
			#{updateBy}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.haima.crm.entity.ComplaintDelayEntity">
		update t_complaint_delay 
		<set>
			<if test="complainId != null">`complain_id` = #{complainId}, </if>
			<if test="complainCode != null">`complain_code` = #{complainCode}, </if>
			<if test="porposDate != null">`porpos_date` = #{porposDate}, </if>
			<if test="delayReason != null">`delay_reason` = #{delayReason}, </if>
			<if test="estimateFinishTime != null">`estimate_finish_time` = #{estimateFinishTime}, </if>
			<if test="checker != null">`checker` = #{checker}, </if>
			<if test="checkInfo != null">`check_info` = #{checkInfo}, </if>
			<if test="checkDate != null">`check_date` = #{checkDate}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_complaint_delay where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_complaint_delay where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>