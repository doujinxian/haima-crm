<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.haima.crm.dao.ComplaintForwardDao">

	<select id="queryObject" resultType="com.haima.crm.entity.ComplaintForward">
		select * from t_complaint_forward where id = #{value}
	</select>

	<select id="queryList" resultType="com.haima.crm.entity.ComplaintForward">
		select * from t_complaint_forward 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_complaint_forward 
	</select>
	 
	<insert id="save" parameterType="com.haima.crm.entity.ComplaintForward">
		insert into t_complaint_forward
		(
			`id`, 
			`complain_code`, 
			`forward_from`, 
			`forward_to`, 
			`handle_msg`, 
			`handle_status`, 
			`handle_date`, 
			`create_by`, 
			`create_time`, 
			`update_by`, 
			`update_time`
		)
		values
		(
			#{id}, 
			#{complainCode}, 
			#{forwardFrom}, 
			#{forwardTo}, 
			#{handleMsg}, 
			#{handleStatus}, 
			#{handleDate}, 
			#{createBy}, 
			#{createTime}, 
			#{updateBy}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.haima.crm.entity.ComplaintForward">
		update t_complaint_forward 
		<set>
			<if test="complainCode != null">`complain_code` = #{complainCode}, </if>
			<if test="forwardFrom != null">`forward_from` = #{forwardFrom}, </if>
			<if test="forwardTo != null">`forward_to` = #{forwardTo}, </if>
			<if test="handleMsg != null">`handle_msg` = #{handleMsg}, </if>
			<if test="handleStatus != null">`handle_status` = #{handleStatus}, </if>
			<if test="handleDate != null">`handle_date` = #{handleDate}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateBy != null">`update_by` = #{updateBy}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_complaint_forward where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_complaint_forward where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>