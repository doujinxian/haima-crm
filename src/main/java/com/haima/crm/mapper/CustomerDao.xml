<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.haima.crm.dao.CustomerDao">

	<select id="queryObject" resultType="com.haima.crm.entity.CustomerEntity">
		select * from t_customer where customer_id = #{value}
	</select>

	<select id="queryList" resultType="com.haima.crm.entity.CustomerEntity">
		select * from t_customer 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_customer 
	</select>
	 
	<insert id="save" parameterType="com.haima.crm.entity.CustomerEntity" useGeneratedKeys="true" keyProperty="customerId">
		insert into t_customer
		(
			`customer_name`, 
			`sex`, 
			`marital_status`, 
			`id_type`, 
			`id_no`, 
			`birthday`, 
			`phone`, 
			`company_phone`, 
			`family_phone`, 
			`address`, 
			`zipcode`, 
			`province`, 
			`city`, 
			`district`, 
			`contact`, 
			`contact_address`, 
			`customer_type1`, 
			`customer_type2`, 
			`occupation`, 
			`company`, 
			`position`, 
			`country`, 
			`profit_revisit_time`, 
			`photograph`, 
			`email`, 
			`qq`, 
			`wechat`, 
			`weibo`, 
			`remark`, 
			`del_flg`, 
			`creator`, 
			`create_time`, 
			`modifier`, 
			`modify_time`
		)
		values
		(
			#{customerName}, 
			#{sex}, 
			#{maritalStatus}, 
			#{idType}, 
			#{idNo}, 
			#{birthday}, 
			#{phone}, 
			#{companyPhone}, 
			#{familyPhone}, 
			#{address}, 
			#{zipcode}, 
			#{province}, 
			#{city}, 
			#{district}, 
			#{contact}, 
			#{contactAddress}, 
			#{customerType1}, 
			#{customerType2}, 
			#{occupation}, 
			#{company}, 
			#{position}, 
			#{country}, 
			#{profitRevisitTime}, 
			#{photograph}, 
			#{email}, 
			#{qq}, 
			#{wechat}, 
			#{weibo}, 
			#{remark}, 
			#{delFlg}, 
			#{creator}, 
			#{createTime}, 
			#{modifier}, 
			#{modifyTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.haima.crm.entity.CustomerEntity">
		update t_customer 
		<set>
			<if test="customerName != null">`customer_name` = #{customerName}, </if>
			<if test="sex != null">`sex` = #{sex}, </if>
			<if test="maritalStatus != null">`marital_status` = #{maritalStatus}, </if>
			<if test="idType != null">`id_type` = #{idType}, </if>
			<if test="idNo != null">`id_no` = #{idNo}, </if>
			<if test="birthday != null">`birthday` = #{birthday}, </if>
			<if test="phone != null">`phone` = #{phone}, </if>
			<if test="companyPhone != null">`company_phone` = #{companyPhone}, </if>
			<if test="familyPhone != null">`family_phone` = #{familyPhone}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="zipcode != null">`zipcode` = #{zipcode}, </if>
			<if test="province != null">`province` = #{province}, </if>
			<if test="city != null">`city` = #{city}, </if>
			<if test="district != null">`district` = #{district}, </if>
			<if test="contact != null">`contact` = #{contact}, </if>
			<if test="contactAddress != null">`contact_address` = #{contactAddress}, </if>
			<if test="customerType1 != null">`customer_type1` = #{customerType1}, </if>
			<if test="customerType2 != null">`customer_type2` = #{customerType2}, </if>
			<if test="occupation != null">`occupation` = #{occupation}, </if>
			<if test="company != null">`company` = #{company}, </if>
			<if test="position != null">`position` = #{position}, </if>
			<if test="country != null">`country` = #{country}, </if>
			<if test="profitRevisitTime != null">`profit_revisit_time` = #{profitRevisitTime}, </if>
			<if test="photograph != null">`photograph` = #{photograph}, </if>
			<if test="email != null">`email` = #{email}, </if>
			<if test="qq != null">`qq` = #{qq}, </if>
			<if test="wechat != null">`wechat` = #{wechat}, </if>
			<if test="weibo != null">`weibo` = #{weibo}, </if>
			<if test="remark != null">`remark` = #{remark}, </if>
			<if test="delFlg != null">`del_flg` = #{delFlg}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifier != null">`modifier` = #{modifier}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}</if>
		</set>
		where customer_id = #{customerId}
	</update>
	
	<delete id="delete">
		delete from t_customer where customer_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_customer where customer_id in 
		<foreach item="customerId" collection="array" open="(" separator="," close=")">
			#{customerId}
		</foreach>
	</delete>

</mapper>