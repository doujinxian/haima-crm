<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.haima.crm.dao.CustomerCarDao">
	
	<resultMap id="RM_CustomerCar" type="com.haima.crm.entity.CustomerCar">
			<result property="customerId" column="customer_id"/>
			<result property="vin" column="vin"/>
			<result property="plateNo" column="plate_no"/>
			<result property="delFlg" column="del_flg"/>
			<result property="creator" column="creator"/>
			<result property="createTime" column="create_time"/>
			<result property="modifier" column="modifier"/>
			<result property="modifyTime" column="modify_time"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="CustomerCar_columns">
	    <![CDATA[
			`customer_id`, 
			`vin`, 
			`plate_no`, 
			`del_flg`, 
			`creator`, 
			`create_time`, 
			`modifier`, 
			`modify_time`
	    ]]>
	</sql>
	
	<!-- 用于where查询公用抽取的列 -->
	<sql id="CustomerCar_condition">
		<where>
        <trim suffix="" suffixOverrides="and">
			<if test="vin != null">`vin` = #{vin}, </if>
			<if test="plateNo != null">`plate_no` = #{plateNo}, </if>
			<if test="delFlg != null">`del_flg` = #{delFlg}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifier != null">`modifier` = #{modifier}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}</if>
        </trim>
		</where>
	</sql>
	
	<select id="queryObject" resultMap="RM_CustomerCar">
		select 
		<include refid="CustomerCar_columns" />
		from t_customer_car 
		where 
		customer_id = #{value}
	</select>

	<select id="queryList" resultMap="RM_CustomerCar">
		select 
		<include refid="CustomerCar_columns" />
		from t_customer_car
		<include refid="CustomerCar_condition"/> 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="java.lang.Integer">
		select 
		count(1) 
		from t_customer_car 
		<include refid="CustomerCar_condition"/>
	</select>
	 
	<insert id="save" parameterType="com.haima.crm.entity.CustomerCar">
		insert into t_customer_car
		(
		<trim suffix="" suffixOverrides=",">
			<if test="customerId!=null">customer_id, </if>
			<if test="vin!=null">vin, </if>
			<if test="plateNo!=null">plate_no, </if>
			<if test="delFlg!=null">del_flg, </if>
			<if test="creator!=null">creator, </if>
			<if test="createTime!=null">create_time, </if>
			<if test="modifier!=null">modifier, </if>
			<if test="modifyTime!=null">modify_time</if>
	     </trim>
		)
		values
		(
		<trim suffix="" suffixOverrides=",">
			<if test="customerId!=null">#{customerId}, </if>
			<if test="vin!=null">#{vin}, </if>
			<if test="plateNo!=null">#{plateNo}, </if>
			<if test="delFlg!=null">#{delFlg}, </if>
			<if test="creator!=null">#{creator}, </if>
			<if test="createTime!=null">#{createTime}, </if>
			<if test="modifier!=null">#{modifier}, </if>
			<if test="modifyTime!=null">#{modifyTime}</if>
	     </trim>
		)
	</insert>
	 
	<update id="update" parameterType="com.haima.crm.entity.CustomerCar">
		update t_customer_car 
		<set>
			<if test="vin != null">`vin` = #{vin}, </if>
			<if test="plateNo != null">`plate_no` = #{plateNo}, </if>
			<if test="delFlg != null">`del_flg` = #{delFlg}, </if>
			<if test="creator != null">`creator` = #{creator}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="modifier != null">`modifier` = #{modifier}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}</if>
		</set>
		where customer_id = #{customerId}
	</update>
	
	<delete id="delete">
		delete from t_customer_car where customer_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_customer_car where customer_id in 
		<foreach item="customerId" collection="array" open="(" separator="," close=")">
			#{customerId}
		</foreach>
	</delete>

</mapper>